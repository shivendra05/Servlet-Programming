<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Servlet-AddNumbers-ServletConfig</display-name>
	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>AdditionOfNumbers</servlet-name>
		<servlet-class>addNumbersServletConfig.AddTwoNumbers</servlet-class>
		<init-param>
			<param-name>num1</param-name>
			<param-value>20</param-value>
		</init-param>
		<init-param>
			<param-name>num2</param-name>
			<param-value>50</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdditionOfNumbers</servlet-name>
		<url-pattern>/addition</url-pattern>
	</servlet-mapping>
</web-app>